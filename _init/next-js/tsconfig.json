{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "NodeNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"paths": {
			"@/*": [
				"${configDir}/src/*"
			],
			"@assets/*": [
				"${configDir}/assets/*"
			],
			"@public/*": [
				"${configDir}/public/*"
			]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
	},
	"include": [
		"${configDir}/next-env.d.ts",
		"${configDir}/**/*.ts",
		"${configDir}/**/*.tsx",
		"${configDir}/.storybook/**/*.ts",
		"${configDir}/.storybook/**/*.tsx",
		"${configDir}/.next/types/**/*.ts"
	],
	"exclude": [
		"${configDir}/node_modules"
	]
}

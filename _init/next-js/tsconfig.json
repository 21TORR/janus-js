{
	"extends": "@21torr/janus/tsconfig/next-js.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@assets/*": [
				"./assets/*"
			],
			"@public/*": [
				"./public/*"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".storybook/**/*.ts",
		".storybook/**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
